/* =font declarations
------------------------------------------ */
@import url('https://fonts.googleapis.com/css?family=Montserrat')
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic')
@import url('https://fonts.googleapis.com/css?family=Merriweather:400,700,400italic')
@import url('https://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic')
@import url('https://fonts.googleapis.com/css?family=Libre+Baskerville:400,700,400italic')


/* =variable declarations
------------------------------------------ */
@import 'colors'

$open-sans = 'Open Sans', 'Trebuchet MS', Helvetica, Verdana, sans-serif

border-radius(size)
  -webkit-border-radius size
  -moz-border-radius size
  border-radius size

$lh = 1.5


/* =reset
------------------------------------------ */
*
  box-sizing border-box

  margin 0
  padding 0
  border 0

  line-height $lh

  font-family $open-sans

input
textarea
  resize none
  outline none
  border none
  -webkit-box-shadow none
  -moz-box-shadow none
  box-shadow none


/* =global styles
------------------------------------------ */
body
  max-width 650px

  margin 0 auto !important
  float none !important

  font-size 100%
  color $black

h1
  font-size 2.747em
h2
  font-size 1.229em
h3
  font-size 0.874em

a
  text-decoration none

input
textarea
  border 1px solid $olive
  font-family $open-sans

input[type='text']
textarea
  width 100%
  padding 10px

input[type='submit']
  padding 5px 15px


/* =page structure
------------------------------------------ */


/* =heading
------------------------------------------ */
body > header
  margin-bottom 20px
  font-family Montserrat, sans-serif


/* =navigation
------------------------------------------ */
nav a
  color $blue
  &:hover
    color $teal


/* =main content
------------------------------------------ */
body > main
  margin 20px 0
  padding 20px
  border-radius 10px

  background-color $pastel-green

form.add-topic
  width 35%
  min-width 300px
  margin-bottom 20px

  textarea
    height ($lh * 8)em
    margin 10px 0

.please-sign-in
  margin-bottom 25px

#topics
  list-style none
  li:before
      content '>'
      margin-right 10px
      font-weight bold
      color $olive

#topics a
  color $blue
  &:hover
    color $teal

.username
  color $green
time
  float right
  font-size small

.topic > header
  margin-bottom 10px
  h2
    margin-bottom 10px
    font-family Montserrat, sans-serif
  p
    font-size small
  .username
    font-weight bold

.topic > footer
  padding 10px 0
  border-bottom 3px solid $olive

  a
    margin-right 5px
    font-weight bold

a.reply
a.delete
  color $olive
  &:hover
    color $blue

form.submit-reply
  margin 5px 0

  textarea
    height ($lh * 5)em
    margin 10px 0

.comments
  margin-top 30px

.comment
  margin 10px 0

  &:nth-child(1n+3)
    border-top 1px dotted $olive
    padding-top 20px

.comment > footer
  li
    display inline
    font-size small


/* =footer
------------------------------------------ */
body > footer
  margin 30px 0
  text-align center
  font-size small
